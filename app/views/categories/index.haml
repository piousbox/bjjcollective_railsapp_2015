
%h1 Categories Index

%ol.categories
  - @categories.each do |c0| # instead of .each do |key, value|
    %li
      .name= c0[0]
      %ol
        - c0[1].each do |c1|
          %li
            .name= c1[0]
            %ol
              - c1[1].each do |c2|
                %li
                  .name= c2[0]
                  %ol
                    - c2[1].each do |c3|
                      %li
                        .name= c3[0]
                        %ol
                          - c3[1].each do |c4|
                            %li
                              .name= c4[0]
                              %ol
                                - c4[1].each do |c5|
                                  %li
                                    -# = c5[0]
                                    = link_to c5[0], category_path( c5[1]['link'] )
                              
    
